<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Passwordmanager" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimary">@color/darkGreen</item>
        <item name="android:statusBarColor">@color/darkGreen</item>
    </style>
    <style name="CustomButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/darkGreen</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="CustomButton2" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
    </style>
    <style name="CustomButton3" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="elevation">0dp</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="CustomDeleteButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/delete</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <style name="Theme.Passwordmanager" parent="Base.Theme.Passwordmanager" />
</resources>